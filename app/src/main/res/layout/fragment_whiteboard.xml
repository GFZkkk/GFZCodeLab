<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.gfz.lab.ui.fragment.home.whiteboard.view.ScaleLayout
        android:id="@+id/flWhiteBoardLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llController">
        <LinearLayout
            android:id="@+id/llWhiteBoardLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_x"/>
        <com.gfz.lab.ui.fragment.home.whiteboard.view.MatrixView
            android:id="@+id/matrixView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_x">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_x"/>
        </com.gfz.lab.ui.fragment.home.whiteboard.view.MatrixView>
    </com.gfz.lab.ui.fragment.home.whiteboard.view.ScaleLayout>

    <LinearLayout
        android:id="@+id/llController"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/btnPaint"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="画笔"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/btnRubber"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="橡皮"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>