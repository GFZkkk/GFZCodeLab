<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/v_left"
        android:layout_width="90dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <View
        android:id="@+id/v_clock1"
        android:layout_width="2dp"
        android:layout_height="7dp"
        android:background="@color/col_323640"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintLeft_toRightOf="@id/v_left"
        app:layout_constraintRight_toLeftOf="@id/v_clock2"
        app:layout_constraintBottom_toBottomOf="@id/v_clock3"/>
    <View
        android:id="@+id/v_clock2"
        android:layout_width="2dp"
        android:layout_height="7dp"
        android:background="@color/col_323640"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="@id/v_clock3"
        app:layout_constraintLeft_toRightOf="@id/v_clock1"
        app:layout_constraintRight_toLeftOf="@id/v_clock3"/>
    <View
        android:id="@+id/v_clock3"
        android:layout_width="2dp"
        android:layout_height="18dp"
        android:background="@color/col_323640"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintLeft_toRightOf="@id/v_clock2"
        app:layout_constraintRight_toLeftOf="@id/v_clock4"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/v_clock4"
        android:layout_width="2dp"
        android:layout_height="7dp"
        android:background="@color/col_323640"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintRight_toLeftOf="@id/v_clock5"
        app:layout_constraintLeft_toRightOf="@id/v_clock3"
        app:layout_constraintBottom_toBottomOf="@id/v_clock3"/>
    <View
        android:id="@+id/v_clock5"
        android:layout_width="2dp"
        android:layout_height="7dp"
        android:background="@color/col_323640"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintLeft_toRightOf="@id/v_clock4"
        app:layout_constraintRight_toLeftOf="@id/v_right"
        app:layout_constraintBottom_toBottomOf="@id/v_clock3"/>
    <View
        android:id="@+id/v_right"
        android:layout_width="90dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_clock_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_clock3"
        app:layout_constraintLeft_toLeftOf="@id/v_clock3"
        app:layout_constraintRight_toRightOf="@id/v_clock3"
        tools:text="10"
        android:textSize="16sp"
        android:textColor="@color/col_323640"/>
</androidx.constraintlayout.widget.ConstraintLayout>
