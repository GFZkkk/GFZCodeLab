<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gfz.lab">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 悬浮窗 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.gfz.lab.data.KTApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="design_width_in_dp"
            android:value="375" />

        <activity android:name="com.gfz.lab.LaunchActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"/>
        <activity android:name="com.gfz.lab.activity.TestCalendarActivity" />
        <activity android:name="com.gfz.lab.activity.TestMultipleChooseActivity" />
        <activity android:name="com.gfz.lab.activity.TestCountDownActivity" />
        <activity android:name="com.gfz.lab.activity.TestClockActivity" />
        <activity android:name="com.gfz.lab.activity.TestMoveActivity" />
        <activity android:name="com.gfz.lab.activity.TestAnimationActivity" />
        <activity android:name="com.gfz.lab.activity.TestExtAdapterActivity" />
        <activity android:name="com.gfz.lab.activity.TestUnderlineActivity"/>
        <activity android:name="com.gfz.lab.activity.RootActivity" />


        <service android:name="com.gfz.lab.service.DrawOverService" />
    </application>

</manifest>